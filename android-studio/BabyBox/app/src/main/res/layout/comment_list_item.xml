<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:showDividers="none"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/userPic"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/userNameText"
                android:layout_width="wrap_content"
                android:textColor="@color/gray"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:layout_gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/followLayout" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/SpacingView" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:id="@+id/followLayout"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/timeImg"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_time"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/timeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/timeImg"
                    android:textSize="11dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/deleteText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:text="@string/delete"
                    android:textColor="@color/gray"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/timeText"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/deleteText"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/adminLayout"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/androidIcon"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_android"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp" />

                    <ImageView
                        android:id="@+id/iosIcon"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_ios"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp" />

                    <ImageView
                        android:id="@+id/mobileIcon"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_call"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/commentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="@color/dark_gray"
            android:textIsSelectable="false" />

    </LinearLayout>

</LinearLayout>




















