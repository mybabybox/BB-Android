<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="#01000000">

    <ProgressBar
        android:id="@+id/spinner"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress_spinner"
        android:layout_gravity="center"></ProgressBar>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/view_bg">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/productLayout"
                android:background="@drawable/button_light_gray_border"
                android:padding="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/productImage"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/actionsLayout"
                    android:weightSum="10"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.6"
                        android:id="@+id/likeLayout"
                        android:layout_marginRight="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:id="@+id/likeImage"
                            android:src="@drawable/ic_like"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/like"
                            android:id="@+id/likeText"
                            android:layout_gravity="center"
                            android:textSize="14dp"
                            android:gravity="center"
                            android:textColor="@color/dark_gray" />
                    </LinearLayout>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/chat"
                        android:id="@+id/chatButton"
                        android:layout_weight="4.2"
                        android:textColor="@color/white"
                        android:background="@drawable/button_gray"
                        android:textSize="18dp"
                        android:layout_marginRight="10dp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/buy"
                        android:id="@+id/buyButton"
                        android:layout_weight="4.2"
                        android:textColor="@color/white"
                        android:background="@drawable/button_pink"
                        android:textSize="18dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/titleText"
                            android:textColor="@color/dark_gray_2"
                            android:textSize="18dp"
                            android:layout_alignParentLeft="true"
                            android:layout_toLeftOf="@+id/priceText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/priceText"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/green"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="10dp" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/descText"
                        android:textColor="@color/gray"
                        android:layout_marginTop="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/catNameText"
                        android:textColor="@color/gray"
                        android:layout_marginTop="10dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/listed"
                            android:textColor="@color/gray"
                            android:textSize="14dp"
                            android:id="@+id/listedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/timeText"
                            android:textSize="14dp"
                            android:textColor="@color/gray"
                            android:layout_marginLeft="3dp"
                            android:layout_toRightOf="@+id/listedText" />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/view"
                            android:layout_gravity="center_vertical"
                            android:layout_toLeftOf="@+id/numViewsText"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:id="@+id/numViewsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/gray"
                            android:textSize="14dp"
                            android:layout_marginLeft="3dp"
                            android:layout_gravity="center_vertical"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/sellerLayout"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_light_gray_border" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/likesLayout"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_light_gray_border" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/commentsLayout"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_light_gray_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/comments"
                    android:id="@+id/numCommentsText"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/dark_gray"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="false"
                    android:background="@color/light_gray_2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/commentText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="7dp"
                        android:layout_marginTop="7dp"
                        android:layout_weight="70"
                        android:background="@drawable/edit_text"
                        android:drawableLeft="@drawable/ic_reply"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="5dp"
                        android:text="@string/post_comment_bar_hint"
                        android:textSize="16dp"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp">
                    </TextView>

                    <Button
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:id="@+id/sendButton"
                        android:background="@drawable/button_gray_border"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/arrow_next"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:text="@string/new_post"
                        android:textColor="@color/light_gray" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/suggestionsLayout"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_light_gray_border" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>























