<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="#01000000">

    <ProgressBar
        android:id="@+id/spinner"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress_spinner"
        android:layout_gravity="center"></ProgressBar>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/view_bg">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/productLayout"
                android:background="@drawable/button_light_gray_border"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    z<com.babybox.view.AdaptiveViewPager
                        android:id="@+id/imagePager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </com.babybox.view.AdaptiveViewPager>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/dotsIndicator"
                        android:layout_alignParentBottom="true">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/dotsLayout"
                            android:orientation="horizontal"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp">
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/actionsLayout"
                    android:weightSum="10"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:id="@+id/likeLayout"
                        android:layout_marginRight="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:id="@+id/likeImage"
                            android:src="@drawable/ic_like"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/like"
                            android:id="@+id/likeText"
                            android:layout_gravity="center"
                            android:textSize="14dp"
                            android:gravity="center"
                            android:textColor="@color/dark_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8.8"
                        android:id="@+id/buyerButtonsLayout"
                        android:weightSum="10">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/chatButton"
                            android:layout_weight="5"
                            android:textColor="@color/white"
                            android:background="@drawable/button_gray"
                            android:textSize="18dp"
                            android:layout_marginRight="7dp"
                            android:textStyle="bold"
                            android:text="@string/chat" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@string/buy"
                            android:id="@+id/buyButton"
                            android:layout_weight="5"
                            android:textColor="@color/white"
                            android:background="@drawable/button_pink"
                            android:textSize="18dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8.8"
                        android:id="@+id/sellerButtonsLayout"
                        android:weightSum="10">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/viewChatsButton"
                            android:layout_weight="5"
                            android:textColor="@color/white"
                            android:background="@drawable/button_gray"
                            android:textSize="18dp"
                            android:layout_marginRight="7dp"
                            android:textStyle="bold"
                            android:text="@string/view_chats" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@string/sold"
                            android:id="@+id/soldButton"
                            android:textColor="@color/white"
                            android:background="@drawable/button_green"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:layout_weight="5" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8.8"
                        android:id="@+id/soldButtonsLayout"
                        android:weightSum="10">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/soldViewChatsButton"
                            android:layout_weight="10"
                            android:textColor="@color/white"
                            android:background="@drawable/button_green"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:text="@string/sold_view_chats"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/titleText"
                            android:textColor="@color/dark_gray_2"
                            android:textSize="16dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="false"
                            android:layout_alignParentTop="true"
                            android:layout_toLeftOf="@+id/priceText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/priceText"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            android:textColor="@color/green"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="false"
                            android:layout_marginLeft="10dp" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/descText"
                        android:textColor="@color/dark_gray"
                        android:layout_marginTop="15dp"
                        android:textSize="15dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/listed"
                            android:textColor="@color/gray"
                            android:textSize="14dp"
                            android:id="@+id/listedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/timeText"
                            android:textSize="14dp"
                            android:textColor="@color/gray"
                            android:layout_marginLeft="3dp"
                            android:layout_toRightOf="@+id/listedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/catNameText"
                            android:textColor="@color/pink"
                            android:textSize="14dp"
                            android:layout_toRightOf="@+id/timeText"
                            android:layout_marginLeft="10dp" />

                        <TextView
                            android:id="@+id/deleteText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:text="@string/delete"
                            android:textColor="@color/gray"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/viewsImage"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp" />

                        <ImageView
                            android:id="@+id/viewsImage"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/view"
                            android:layout_gravity="center_vertical"
                            android:layout_toLeftOf="@+id/numViewsText"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:id="@+id/numViewsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/gray"
                            android:textSize="14dp"
                            android:layout_marginLeft="3dp"
                            android:layout_gravity="center_vertical"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sellerLayout"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_light_gray_border"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/sellerImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"></ImageView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/sellerNameText"
                        android:layout_width="wrap_content"
                        android:textColor="@color/sharp_pink"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="10dp" />

                    <Button
                        android:layout_width="75dp"
                        android:layout_height="30dp"
                        android:id="@+id/followButton"
                        android:background="@drawable/button_pink_border"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/arrow_next"
                        android:layout_marginRight="10dp"
                        android:text="@string/follow"
                        android:textColor="@color/light_pink"
                        android:textSize="14dp"
                        android:layout_alignParentRight="true"
                        android:textAllCaps="false"
                        android:singleLine="true" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/likesLayout"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_light_gray_border"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="gone" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/commentsLayout"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_light_gray_border"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/moreCommentsLayout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/comments"
                        android:id="@+id/numCommentsText"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/dark_gray"
                        android:textSize="15dp" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:id="@+id/moreCommentsImage"
                        android:src="@drawable/arrow_next"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp" />
                </RelativeLayout>

                <View
                    android:id="@+id/viewBar1"
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@drawable/bar1"></View>

                <ListView
                    android:id="@+id/commentList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:divider="@null"
                    android:visibility="gone"></ListView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_alignParentBottom="false"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/commentText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="7dp"
                        android:layout_marginTop="7dp"
                        android:layout_weight="70"
                        android:background="@drawable/edit_text"
                        android:drawableLeft="@drawable/ic_reply"
                        android:layout_marginRight="10dp"
                        android:text="@string/comment_bar_hint"
                        android:textSize="14dp"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/gray"
                        android:paddingLeft="10dp">
                    </TextView>

                    <Button
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:id="@+id/sendButton"
                        android:background="@drawable/button_gray_border"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/arrow_next"
                        android:layout_marginRight="10dp"
                        android:text="@string/new_post"
                        android:textColor="@color/light_gray"
                        android:textSize="14dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/suggestionsLayout"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_light_gray_border"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>























