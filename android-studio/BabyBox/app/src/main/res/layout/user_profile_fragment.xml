<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profileLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_bg">

    <!--FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/coverImageLayout"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="@color/white"
            android:visibility="gone">

            <ImageView
                android:id="@+id/coverImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"></ImageView>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/editCoverImage"
                android:src="@drawable/edit_photo"
                android:adjustViewBounds="true"
                android:layout_gravity="bottom|right"
                android:layout_alignRight="@+id/coverImage"
                android:layout_alignBottom="@+id/coverImage"
                android:layout_margin="10dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/profileImageLayout"
            android:layout_below="@+id/coverImageLayout"
            android:background="@color/white">

            <FrameLayout
                android:id="@+id/profileImageFrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/image_circle"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">

                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/profileImage"
                    android:layout_width="85dp"
                    android:layout_height="85dp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:id="@+id/editProfileImage"
                    android:src="@drawable/edit_photo"
                    android:adjustViewBounds="true"
                    android:layout_gravity="bottom|right"
                    android:layout_margin="5dp" />

            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/profileInfo"
                android:layout_marginLeft="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="@color/dark_gray"
                        android:singleLine="true"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/settingsLayout"
                        android:layout_toRightOf="@+id/followButton"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical">

                        <Button
                            android:id="@+id/editButton"
                            android:layout_width="68dp"
                            android:layout_height="28dp"
                            android:textSize="14dp"
                            android:background="@drawable/button_gray_border"
                            android:text="@string/edit_user_info"
                            android:textColor="@color/gray"
                            android:layout_centerVertical="true"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:layout_toLeftOf="@+id/settingsIcon"
                            android:layout_marginRight="10dp" />

                        <ImageView
                            android:id="@+id/settingsIcon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/ic_settings"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/ratingsLayout">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/gameLayout">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="20dp"
                            android:src="@drawable/game_l1"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/game_points_desc"
                            android:id="@+id/pointsDesc"
                            android:textColor="@color/dark_gray_2"
                            android:textSize="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:id="@+id/pointsText"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:textColor="@color/game_orange"
                            android:layout_marginLeft="7dp"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.8dp"
            android:background="@drawable/bar1"
            android:layout_below="@+id/profileImageLayout"
            android:id="@+id/bar1" />

        <LinearLayout
            android:id="@+id/followLayout"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:minHeight="50dp"
            android:background="@color/white"
            android:layout_below="@+id/bar1"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/followers"
                android:id="@+id/followersText"
                android:layout_weight="3.33"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/dark_gray"
                android:textSize="15dp"
                android:textStyle="bold" />

            <View
                android:layout_width="0.8dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bar2"
                android:layout_below="@+id/profileImageLayout"
                android:id="@+id/barVertical1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/following"
                android:id="@+id/followingText"
                android:layout_weight="3.33"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/dark_gray"
                android:textSize="15dp"
                android:textStyle="bold" />

            <View
                android:layout_width="0.8dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bar2"
                android:layout_below="@+id/profileImageLayout"
                android:id="@+id/barVertical2" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.33">

                <Button
                    android:id="@+id/followButton"
                    android:layout_alignParentRight="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:background="@drawable/button_follow"
                    android:text="@string/follow"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="false"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <Button
                    android:id="@+id/ordersButton"
                    android:layout_alignParentRight="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:background="@drawable/button_pink_border"
                    android:text="@string/orders"
                    android:textColor="@color/pink"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="false"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.8dp"
            android:background="@drawable/bar1"
            android:id="@+id/bar2"
            android:layout_below="@+id/followLayout" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tipsLayout"
            android:layout_below="@+id/bar2"
            android:layout_margin="10dp">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                android:id="@+id/tipsFrame"
                android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/tips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/tips_box_pink"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="5dp"
                        android:layout_below="@+id/viewBar"
                        android:paddingTop="5dp">

                        <ImageView
                            android:id="@+id/mascot"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/mascot_box" />

                        <TextView
                            android:id="@+id/tipsReminderText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/dark_gray_2"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:text="@string/tips_reminder" />

                        <TextView
                            android:id="@+id/tipsDescText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/dark_gray_2"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp" />

                        <TextView
                            android:id="@+id/tipsPointsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:textColor="@color/game_orange"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="2dp"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:id="@+id/tipsEndText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/game_note_points"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/dark_gray_2"
                            android:layout_gravity="center_vertical" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/dismissTipsButton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_close"
                        android:layout_gravity="right|top"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:padding="6dp" />

                </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/tipsLayout"
                android:background="@color/view_bg"
                android:orientation="horizontal">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.8dp"
                    android:background="@drawable/bar1" />

                <LinearLayout
                    android:id="@+id/menuQuestion"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/view_bg"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/questionPic"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/posts"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:id="@+id/questionText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@id/questionPic"
                            android:layout_weight="75"
                            android:text="@string/questions_title"
                            android:textSize="16dp"
                            android:gravity="center_vertical" />

                        <TextView
                            android:id="@+id/questionsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_toRightOf="@id/questionText"
                            android:layout_weight="5"
                            android:textColor="#FF6666"
                            android:gravity="center_vertical" />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_weight="5"
                            android:src="@drawable/arrow_right" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.8dp"
                    android:layout_below="@id/menuQuestion"
                    android:background="@drawable/bar1" />

                <LinearLayout
                    android:id="@+id/menuAnswer"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/menuQuestion"
                    android:background="@color/view_bg"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/answerPic"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/comment"
                            android:layout_gravity="center_vertical" />

                        <TextView
                            android:id="@+id/answerText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@id/answerPic"
                            android:layout_weight="75"
                            android:text="@string/answers_title"
                            android:textSize="16dp"
                            android:gravity="center_vertical" />

                        <TextView
                            android:id="@+id/answersCount"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_toRightOf="@id/answerText"
                            android:layout_weight="5"
                            android:editable="false"
                            android:textColor="#FF6666"
                            android:gravity="center_vertical" />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_weight="5"
                            android:src="@drawable/arrow_right" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.8dp"
                    android:layout_below="@id/menuAnswer"
                    android:background="@drawable/bar1" />

                <LinearLayout
                    android:id="@+id/menuBookmarks"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/menuAnswer"
                    android:background="@color/view_bg"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/bookmarksPic"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/ic_bookmarked" />

                        <TextView
                            android:id="@+id/bookmarksText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="75"
                            android:text="@string/bookmarks_title"
                            android:textSize="16dp"
                            android:gravity="center_vertical" />

                        <TextView
                            android:id="@+id/bookmarksCount"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_weight="5"
                            android:editable="false"
                            android:textColor="#FF6666"
                            android:gravity="center_vertical" />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_weight="5"
                            android:src="@drawable/arrow_right" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.8dp"
                    android:layout_below="@id/menuBookmarks"
                    android:background="@drawable/bar1" />

                <LinearLayout
                    android:id="@+id/userInfoLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/view_bg"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_alignParentBottom="false"
                    android:layout_below="@+id/menuBookmarks"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/userInfoText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="75"
                            android:text="-"
                            android:textSize="14dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/admin_green" />

                    </LinearLayout>
                </LinearLayout>

        </RelativeLayout>
        </RelativeLayout>

    <!--/FrameLayout-->


</RelativeLayout>
