<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popupElement"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_pink_2"
    android:orientation="horizontal"
    android:elevation="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:id="@+id/viewComponent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cancelButton"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/close"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:id="@+id/emoImage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/emo_smile"
                android:layout_gravity="center_vertical" />


        </LinearLayout>

        <TextView
            android:id="@+id/sendButton"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:text="@string/new_post"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            style="@style/com_facebook_loginview_silver_style"
            android:layout_alignParentBottom="false" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/commentComponent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewComponent"
        android:layout_marginTop="10dp">

        <EditText
            android:editable="true"
            android:id="@+id/commentEditText"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/white"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:enabled="true"
            android:gravity="left|top"
            android:padding="3dp"
            android:hint="@string/post_comment_bar_hint"
            android:textSize="16dp"
            android:clickable="true" />
    </LinearLayout>

</RelativeLayout>


