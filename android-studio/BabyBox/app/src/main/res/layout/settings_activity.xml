<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <include layout="@layout/view_actionbar"
        android:id="@+id/toolbar" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.8dp"
        android:background="@drawable/bar1"
        android:id="@+id/bar1"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="10"
            android:id="@+id/appVersionLayout">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/app_version"
                android:layout_weight="5"
                android:singleLine="true"
                android:textColor="@color/dark_gray_2"
                android:textSize="16dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:singleLine="true"
                android:textColor="@color/dark_gray_2"
                android:textSize="16dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/appVersionText"
                android:gravity="center_vertical|right" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="10"
            android:id="@+id/langLayout">

            <TextView
                android:text="@string/lang_desc"
                android:textSize="16dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/dark_gray_2"
                android:layout_weight="5"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical" />

            <Spinner
                android:id="@+id/langSpinner"
                android:layout_below="@+id/languageLabel"
                android:layout_centerHorizontal="true"
                android:background="@drawable/spinner_bg_clear"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="5"
                android:spinnerMode="dropdown"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_gravity="center"
                android:focusable="true"
                android:focusableInTouchMode="true"></Spinner>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.8dp"
        android:background="@drawable/bar1"
        android:id="@+id/bar2"
        android:focusableInTouchMode="false" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.8dp"
        android:background="@drawable/bar1"
        android:id="@+id/bar3"
        android:focusableInTouchMode="false"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="10"
            android:id="@+id/notificationSettingsLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/notification_settings"
                android:layout_weight="5"
                android:singleLine="true"
                android:textColor="@color/dark_gray_2"
                android:textSize="16dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView"
                android:layout_gravity="center_vertical|right"
                android:src="@drawable/arrow_next"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />


        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.8dp"
        android:background="@drawable/bar1"
        android:id="@+id/bar4"
        android:focusableInTouchMode="false" />

    <RelativeLayout
        android:id="@+id/logoutLayout"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/pink">

        <TextView
            android:id="@+id/logoutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="@string/logout"
            android:textColor="@color/white"
            android:textSize="22dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/adminLayout"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/light_gray"
        android:visibility="gone">

        <TextView
            android:id="@+id/adminText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="@string/admin"
            android:textColor="@color/white"
            android:textSize="22dp" />
    </RelativeLayout>

</LinearLayout>